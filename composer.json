{
  "name": "szabacsik/phinx-snowflake-adapter",
  "description": "Phinx Snowflake Adapter",
  "type": "library",
  "require-dev": {
    "phpunit/phpunit": "*",
    "squizlabs/php_codesniffer": "*",
    "phpstan/phpstan": "*",
    "rector/rector": "*",
    "infection/infection": "*",
    "vimeo/psalm": "*",
    "phpmd/phpmd": "*",
    "ext-pdo": "*",
    "robmorgan/phinx": "*",
    "mockery/mockery": "*"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Szabacsik\\Phinx\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Szabacsik\\Phinx\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "András Szabácsik",
      "email": "andras@szabacsik.hu"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.2"
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  },
  "scripts-descriptions": {
    "test:coverage": "Runs all PHPUnit tests, writes HTML results in TestDox format to `reports/result.html` file and code coverage report to `reports/coverage` directory.",
    "test:unit": "Runs all PHPUnit tests without code coverage report."
  },
  "scripts": {
    "test:unit": [
      "@putenv XDEBUG_MODE=coverage",
      "phpunit --configuration phpunit.xml --colors=always --testdox --display-warnings --display-errors --no-coverage"
    ],
    "test:coverage": [
      "@putenv XDEBUG_MODE=coverage",
      "phpunit --configuration phpunit.xml --color=always --testdox --coverage-html reports/coverage --testdox-html reports/result.html"
    ]
  }
}
